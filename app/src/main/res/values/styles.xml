<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="movies_placeholder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">?attr/actionBarSize</item>
    </style>

    <style name="movie_placeholder" parent="@style/movies_placeholder">
    </style>

    <style name="grid_item_movie_poster">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="movies_grid">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/app_dark_grey</item>
        <item name="android:numColumns">2</item>
        <item name="android:smoothScrollbar">true</item>
        <item name="android:stretchMode">columnWidth</item>
    </style>

    <style name="movies_grid_tablet" parent="movies_grid">
        <item name="android:numColumns">3</item>
    </style>

    <style name="movie_name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">28dp</item>
        <item name="android:textSize">36sp</item>
        <item name="android:background">@color/movie_name_background_turquoise</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="movie_detail_widget_common">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="movie_detail_widget_common_small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="movie_year" parent="@style/movie_detail_widget_common">
        <item name="android:layout_below">@id/movie_name</item>
        <item name="android:layout_toRightOf">@id/movie_poster</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="movie_poster" parent="@style/movie_detail_widget_common">
        <item name="android:layout_below">@id/movie_name</item>
    </style>

    <style name="movie_overview" parent="@style/movie_detail_widget_common">
        <item name="android:layout_below">@id/movie_poster</item>
    </style>

    <style name="movie_vote_average" parent="@style/movie_detail_widget_common_small">
        <item name="android:layout_below">@id/movie_year</item>
        <item name="android:layout_toRightOf">@id/movie_poster</item>
    </style>

    <style name="PreferenceTheme">
        <item name="android:background">@color/app_dark_grey</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="movies_placeholder_land">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/background_grey</item>
    </style>

    <style name="movie_placeholder_land" parent="movies_placeholder_land">
    </style>

    <style name="container_land">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">?attr/actionBarSize</item>
    </style>
</resources>
